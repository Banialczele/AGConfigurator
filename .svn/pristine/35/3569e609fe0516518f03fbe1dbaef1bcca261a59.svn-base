body {
    box-sizing: border-box;
    margin: 0;
    width: 100%;
    min-height: auto;
    background: #f8f8f8;
}

.powerManagementContainer {
    width: 100%;
    margin: 40px auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

select {
    padding: 5px 10px;
    min-width: auto;
    border-radius: 10px;
    border: 1px;
    background: lightgray;
    -moz-appearance: none; /* Firefox */
    -webkit-appearance: none; /* Safari and Chrome */
}

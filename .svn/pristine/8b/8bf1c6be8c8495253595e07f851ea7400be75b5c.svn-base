body {
    box-sizing: border-box;
    margin: 0;
    width: 100vw;
    min-height: 100vh;
    background: #f8f8f8;

}

.powerManagementContainer {
    width: 80vw;
    padding: 15px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

select {
    padding: 5px 10px;
    border-radius: 10px;
    border: 1px;
    background: lightgray;
    -moz-appearance: none; /* Firefox */
    -webkit-appearance: none; /* Safari and Chrome */
}

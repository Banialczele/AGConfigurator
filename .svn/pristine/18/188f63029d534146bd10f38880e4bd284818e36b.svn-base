.sticky {
    position: fixed;
    display: inline;
    top: 50px;
    left: 20px;
    z-index: 9999;
}

@media (max-width: 1700px) {
    .buttonDiv {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-left: 30px;
    }
}

@media (max-width: 1000px) {
    .installationSegment {
        margin-left: auto;
    }
    .buttonDiv {
        margin-left: 2px;
    }
}





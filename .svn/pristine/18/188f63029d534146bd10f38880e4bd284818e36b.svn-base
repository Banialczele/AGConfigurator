.powerManagementInstallationContainer {
    width: 100%;
    height: 100%;
    min-height: 100vh;
}

.installationContainer {
    width: 100%;
	
}

.installationSegment {
    width: 100%;
    background: rgb(200, 200, 200);
    border-radius: 5px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 2fr;
    grid-template-rows: 150px;
    grid-template-areas: "checkboxAndWire wireImage deviceImage deviceSelect";
}

.installationSegment .checkboxAndcableContainer {
    grid-area: checkboxAndWire;
    height: 100%;
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    grid-template-rows: 1fr 2fr 1fr;
    justify-items: center;
    align-items: center;
	background: linear-gradient(135deg, rgb(200,200,200) 0%, rgb(255,226,195) 100%);
}

.installationSegment .checkboxAndcableContainer input {
    justify-self: end;
    align-self: end;
    margin-top: 5px;
}

.installationSegment .checkboxAndcableContainer .cableContainer {
    grid-column: 2/3;
    grid-row: 2/3;
}

.cableContainerInput input {
    width: 100px;
}

.installationSegment .cableImageContainer {
    grid-area: wireImage;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
	background: linear-gradient(135deg, rgb(200,200,200) 0%, rgb(255,226,195) 100%);
}

.installationSegment .cableImageContainer .cableimage {
    justify-self: end;
    height: 100%;
}

.installationSegment .deviceImageContainer {
    grid-area: deviceImage;
    display: grid;
    grid-template-columns: 150px;
    grid-template-rows: 75px 150px;
}

.installationSegment .deviceImageContainer .devicePadding {
    height: 100%;
    grid-row: 1 / 2;
}

.installationSegment .deviceImageContainer .deviceimage {
    height: 100%;
    justify-self: start;
    grid-row: 2 / span 2;
	background: linear-gradient(135deg, rgb(200,200,200) 0%, rgb(255,226,195) 100%);
}

.installationSegment .deviceContainer {
    grid-area: deviceSelect;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
	background: linear-gradient(135deg, rgb(200,200,200) 0%, rgb(255,226,195) 100%);
}

.installationSegment .deviceContainer .deviceLabel {
    grid-row: 1 / 3;
    grid-column: 1 / 3;
    justify-self: center;
    align-self: center;
}

.installationSegment .deviceContainer .deviceButtons {
    grid-row: 2 / span 2;
    grid-column: 1 / 3;
    justify-self: center;
    align-self: center;
}

.installationSegment:last-child {
    padding-bottom: 100px;
}


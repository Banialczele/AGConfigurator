body {
    margin: 0;
    width: 100%;
    height: 100vh;
    max-width: 1800px;
    background: rgba(96,96,96, 0.5);
}

.powerManagementContainer {
    width: 100%;
    margin: 40px auto;
}

/* styles to remove arrows from input element */
#quantity, input::-webkit-outer-spin-button,
#quantity, input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

#quantity, input[name="cableInput"] {
    width: 80px;
    -moz-appearance: textfield;
}

select {
    padding: 5px 10px;
    max-width: 180px;
    text-align: center;
    border-radius: 10px;
    border: 1px;
    background: #d3d3d3;
    -moz-appearance: none; /* Firefox */
    -webkit-appearance: none; /* Safari and Chrome */
}

.systemStatus {
    text-align: center;
}

.sysOk {
    background: #83ff84;
}

.sysWrong {
    background: #f38585;
}

.popup {
    max-width: 200px;
    background: rgba(23, 20, 20, 0.8);
    color: white;
    padding: 15px 10px;
    transform: translateY(-500%);
}

.open-active {
    transform: translateX(10%) translateY(-80%);
}

.sticky {	
    position: fixed;		
    top: 50px;	
    left: 20px;	
    z-index: 9999;	
}

.powerManagementInstallationContainer {
    width: 100%;
    height: 100%;
    min-height: 100vh;
}

.installationSegment {
    width: 65%;
    background: rgb(65, 64, 66);
    border-radius: 5px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 350px 250px 250px 1fr;
    grid-template-rows: 150px;
    grid-template-areas: "checkboxAndWire wireImage deviceImage deviceSelect";
}

.installationSegment .checkboxAndcableContainer {
    grid-area: checkboxAndWire;
    height: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
}

.installationSegment .checkboxAndcableContainer input {
    justify-self: end;
    align-self: end;
    margin-top: 5px;
}

.installationSegment .checkboxAndcableContainer .cableContainer {
    grid-column: 2/3;
    grid-row: 2/3;
}

.installationSegment .cableImageContainer {
    grid-area: wireImage;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
}

.installationSegment .cableImageContainer .cableimage {
    justify-self: end;
    height: 100%;
}

.installationSegment .deviceImageContainer {
    grid-area: deviceImage;
    display: grid;
    grid-template-columns: 150px;
    grid-template-rows: 75px 150px;
}

.installationSegment .deviceImageContainer .devicePadding {
    height: 100%;
    grid-row: 1 / 2;
}

.installationSegment .deviceImageContainer .deviceimage {
    height: 100%;
    justify-self: start;
    grid-row: 2 / span 2;
}

.installationSegment .deviceContainer {
    grid-area: deviceSelect;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
}

.installationSegment .deviceContainer .deviceLabel {
    grid-row: 1 / 3;
    grid-column: 1 / 3;
    justify-self: center;
    align-self: center;
}

.installationSegment .deviceContainer .deviceButtons {
    grid-row: 2 / span 2;
    grid-column: 1 / 3;
    justify-self: center;
    align-self: center;
}

.installationSegment:last-child {
    padding-bottom: 100px;
}

.buttonDiv {
    position: absolute;
}
    
.sticky {
  position: fixed;
  display: inline;
  top: 50px;
  left: 20px;
  z-index: 9999;
}






html, body {
    overscroll-behavior: none;
    overflow: auto;
    font-family: 'Open Sans', Arial, Helvetica, sans-serif; 
    font-size: 14px;
}

*, *::before, *::after {
    box-sizing: border-box;
}

body {
    margin: 0;
    width: 100vw;
    height: 100vh;
}

.powerManagementContainer {
    width: 100%;
    margin: 0 auto;
}

/* styles to remove arrows from input element */
#quantity, input::-webkit-outer-spin-button,
#quantity, input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

#quantity, input[name="cableInput"] {
    width: 80px;
    -moz-appearance: textfield;
}

.languageVersions {
    width: 200px;
    display: flex;
    flex-direction: column;
}

.languageVersions > a {
    flex: 1;
    color: inherit;
    margin-left: auto;
    justify-content: start;
	font-size: 10px;
}

.languageVersions > a:hover {
    color: #333;
}

select {
    padding: 5px 10px;
    text-align: center;
    border-radius: 5px;
    border: 1px;
    background: #FFFFFF;
    -moz-appearance: none; /* Firefox */
    -webkit-appearance: none; /* Safari and Chrome */
}

select.powerSupply, select.deviceSelect {
    width: 160px;
}

p {
    margin: 0;
}

*:focus {
    outline: none;
}

.systemStatus {
    margin: 0 auto;
    max-width: 50%;
    min-width: 650px;
    height: 80px; 
    background: rgba(255, 255, 255, 0.4);
    padding: 0 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
}

.systemInfo {
    display: flex;
    flex-direction: column;
}

.sys {
    width: 100%;
    display: flex;
    align-items: flex-start;
    flex-direction: row;
}

.systemStatusDescription {
    display: inline-block;
    margin-right: 10px;
}

.systemStatusText {
    display: inline-block;
    width: 20px;
    height: 20px;
    border-radius: 25px;
    -webkit-border-radius: 25px;
    -moz-border-radius: 25px;
    background: #4CB817;
}

.popup {
    max-width: 200px;
    background: rgba(23, 20, 20, 0.8);
    color: white;
    padding: 15px 10px;
    transform: translateY(-500%);      
    
}

.open-active {
    transform: translateX(10%) translateY(-80%);
    border-radius: 15px;
}

img {
    width: 100%;
}

.sticky {
    position: fixed;
    top: 50px;
    left: 20px;
    z-index: 9999;
}

.licenseDiv {
    margin: 15px auto;
    max-width: 50%;
    min-width: 650px;
    height: 50px;
    
}

input, button {
    background: #FFFFFF;
    border-radius: 5px;
    border: none;
}

#header {
    margin: 15px auto 0;
    max-width: 50%;
    min-width: 650px;
    background: rgba(255, 255, 255, 0.4);
    border-bottom: 1px dotted #222;
    padding: 0 15px;
    display: flex;
    flex-direction: column;
}

#header #headerContainer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

#header h2 {
    margin: 5px 0;
}

#header #headerImage {
    width: 160px;
    align-self: center;
}

#header p {
    font-size: 12px;
    color: darkgray;
} 

.licensedDeleteImage, .licensedCopyImage {
    height: 20px;
    width: auto;
}

.licenseIntro {
    display: inline;
}




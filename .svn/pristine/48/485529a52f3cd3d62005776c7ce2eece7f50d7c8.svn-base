html, body {
    /*overscroll-behavior: none;*/
    /*overflow: auto;*/
    font-family: 'Open Sans', Arial, Helvetica, sans-serif;
}

*, *::before, *::after {
    box-sizing: border-box;
}

body {
    margin: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(96, 96, 96, 0.5);
}

.powerManagementContainer {
    width: 100%;
    margin: 0 auto;
}

/* styles to remove arrows from input element */
#quantity, input::-webkit-outer-spin-button,
#quantity, input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

#quantity, input[name="cableInput"] {
    width: 80px;
    -moz-appearance: textfield;
}

select {
    padding: 5px 10px;
    max-width: 180px;
    text-align: center;
    border-radius: 10px;
    border: 1px;
    background: #d3d3d3;
    -moz-appearance: none; /* Firefox */
    -webkit-appearance: none; /* Safari and Chrome */
}

p {
    margin: 0;
}

.systemStatus {
    margin: 0 auto;
    text-align: center;
    max-width: 50%;
    min-width: 650px;
    background: rgba(255, 255, 255, 0.4);
    padding: 15px 0;
}

.sysOk {
    background: #83ff84;
}

.sysWrong {
    background: #f38585;
}

.popup {
    max-width: 200px;
    background: rgba(23, 20, 20, 0.8);
    color: white;
    padding: 15px 10px;
    transform: translateY(-500%);
}

.open-active {
    transform: translateX(10%) translateY(-80%);
}

img {
    width: 100%;
}

.sticky {
    position: fixed;
    top: 50px;
    left: 20px;
    z-index: 9999;
}

#header {
    margin: 15px auto 0;
    max-width: 50%;
    min-width: 650px;
    background: rgba(255, 255, 255, 0.4);
    border-bottom: 1px dotted #222;
    padding: 0 15px;
    display: flex;
    flex-direction: column;
}

#header #headerContainer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}

#header h2 {
    margin: 5px 0;
}

#header #headerImage {
    width: 160px;
    align-self: center;
}

#header p {
    font-size: 12px;
    color: darkgray;
}

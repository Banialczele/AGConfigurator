.powerManagementInstallationContainer {
    margin: 0 auto;
    min-width: 650px;
    max-width: 50%;
    display: grid;
    height: auto;
    min-height: 250px;
    grid-template-columns: 1fr;
    grid-template-rows: 75px 1fr;
    grid-template-areas: 
        "powerSupply"                               
        "installation";
}

.powerManagementInstallationContainer .powerSupplyContainer {
    grid-area: powerSupply;
}
.powerManagementInstallationContainer .installationContainer {
    grid-area: installation;
}

.installationSegment {
    display: grid;
    grid-template-columns: minmax(200px,1fr) auto auto minmax(200px,1fr);
    grid-template-rows: 150px;
    grid-template-areas: 
    "checkboxAndWire wireImage deviceImage deviceSelect"    
    ;
}

.installationSegment .checkboxAndcableContainer {
    grid-area: checkboxAndWire;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    justify-items: center;
    align-items: center;
}

.installationSegment .checkboxAndcableContainer input {
    grid-column: 2;
    grid-row: 1;
    justify-self: start;
    align-self: start;
    margin-top: 5px;
}

.installationSegment .checkboxAndcableContainer .cableContainer {
    grid-column: 2;
    grid-row: 1;
    place-self: end;
}

.cableContainerInput input{
    max-width: 70%
}

.installationSegment .cableImageContainer {
    grid-area: wireImage;
}

.installationSegment .cableImageContainer .cableimage {
    justify-self: end;
    height: 150px;
}

.installationSegment .deviceImageContainer {
    height: 150px;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.installationSegment .deviceImageContainer #devicePaddingImage {
    height: 75px;
}

.installationSegment .deviceImageContainer .deviceimage {
    height: 150px;
}

.installationSegment .deviceContainer {
    grid-area: deviceSelect;
    display: grid;
    grid-template-columns: 1fr 1fr;    
    grid-template-rows: 1fr 1fr;
}

.installationSegment .deviceContainer .deviceLabel {
    grid-row: 2;
    grid-column: 1;
    justify-self: center;
    align-self: start;
    margin: 10px 0;
}

.installationSegment .deviceContainer .deviceButtons {
    grid-row: 2;
    grid-column: 1; 
    justify-self: center;
    align-self: end;
    display: flex;
    flex-direction: row;     
}

.copyButton img {
    pointer-events: none;
}

.installationSegment:nth-last-child(1) {
    padding-bottom: 100px;
}

.checkboxesContainer {
    background: rgba(0,0,0,0.4);
    position: fixed;
    bottom: 50px;
    width: 100%;
}

.checkboxesContainer .buttonDiv {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(3, minmax(200px, 1fr)) auto;
    grid-template-rows: 40px;
    grid-template-areas: "checkboxArea checkboxLabel . adjustCables";
}

.buttonDiv #checkCheckboxes {
    grid-area: checkboxArea;
    place-self: center end;
}

.buttonDiv #checkCheckboxesLabel {
    grid-area: checkboxLabel;
    place-self: center start;
}

.buttonDiv #matchCablesToSystem {
    grid-area: adjustCables;
    place-self: center;
    margin-right: 40px;
}

@media (max-width: 1700px) {
    .buttonDiv {
        display: flex;
        flex-direction: column;
    }
    
    .installationContainer .buttonDiv > input {
        width: 150px;
    }
}

@media (max-width: 1000px) {
    .installationSegment {
        margin-left: auto;
    }
}




